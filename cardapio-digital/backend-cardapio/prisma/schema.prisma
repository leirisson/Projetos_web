
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  category  String
  description String
  imgUrl     String
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(uuid())
  total     Float
  createdAt DateTime @default(now())
}