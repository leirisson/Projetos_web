generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  task Task[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt()
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String
  status      Status
  priority    Priority
  dueDate     DateTime?
  userId      String
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt()
  user        User      @relation(fields: [userId], references: [id])
}

enum Status {
  PEDING
  IN_PROFGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
